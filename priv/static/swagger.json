    "/api/players/{player_id}": {
      "put": {
        "description": "Updates a player information",
        "operationId": "FantasyWeb.PlayersController.update",
        "parameters": [
          {
            "description": "Player ID",
            "in": "path",
            "name": "player_id",
            "required": true,
            "type": "uuid"
          },
          {
            "description": "Player's first-name",
            "in": "query",
            "name": "fname",
            "required": false,
            "type": "string"
          },
          {
            "description": "Player's last-name",
