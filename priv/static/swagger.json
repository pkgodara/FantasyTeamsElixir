  "paths": {
    "/api/auctions": {
      "post": {
        "description": "Sets/Puts the player on auction aka transfer-list",
        "operationId": "FantasyWeb.TransferListController.auction",
        "parameters": [
          {
            "description": "Player ID to sell",
            "in": "query",
            "name": "player_id",
            "required": false,
            "type": "uuid"
          },
          {
            "description": "Asking price for player",
            "in": "query",
            "name": "ask_price",
            "required": false,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Transfer"
            }
          }
        },
        "summary": "",
        "tags": [
          "TransferList"
        ]
      }
    },
    "/api/auctions/list": {
      "get": {
        "description": "Paginated List of all the players on auction aka transfer-list",
        "operationId": "FantasyWeb.TransferListController.list",
        "parameters": [
          {
            "description": "Page number to load",
            "in": "path",
            "name": "page",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/TransferList"
            }
          }
        },
        "summary": "",
        "tags": [
          "TransferList"
        ]
      }
    },
